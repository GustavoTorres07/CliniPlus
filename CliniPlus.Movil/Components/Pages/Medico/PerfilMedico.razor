@page "/medico/perfil"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@using Microsoft.AspNetCore.Components.Forms
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IMedicoPerfilService PerfilService
@inject CliniPlus.Movil.Services.Contrato.IEspecialidadService EspecialidadService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column justify-content-center align-items-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-3"></div>
        <span>Cargando perfil...</span>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else if (_perfil is null)
{
    <div class="home-page">
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="IrInicio">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Mi Cuenta</p>
                    <h4 class="home-name">Perfil Médico</h4>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <div class="home-card p-4 mb-3">
            <h6 class="section-title mb-2">Perfil no configurado</h6>
            <p class="text-muted small mb-0">
                Tu usuario médico está activo, pero el perfil aún no está cargado en el sistema.
                Pedile a Secretaría/Admin que lo configure o que te asigne especialidad.
            </p>
        </div>
    </div>
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="IrInicio">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Mi Cuenta</p>
                    <h4 class="home-name">Perfil Médico</h4>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <EditForm Model="_perfil" OnValidSubmit="Guardar">
            <DataAnnotationsValidator />

            <div class="home-card p-4 mb-3">
                <h6 class="section-title mb-3">Datos Personales</h6>

                <div class="mb-3">
                    <label class="form-label label-mini">Nombre</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Nombre" />
                </div>

                <div class="mb-3">
                    <label class="form-label label-mini">Apellido</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Apellido" />
                </div>

                <div class="mb-2">
                    <label class="form-label label-mini">Email</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Email" />
                </div>
            </div>

            <div class="home-card p-4 mb-3">
                <h6 class="section-title mb-3">Información Profesional</h6>

                <div class="mb-3">
                    <label class="form-label label-mini">Biografía / Presentación</label>
                    <InputTextArea class="form-control input-modern" rows="3" @bind-Value="_perfil.Bio" />
                </div>

                <div class="mb-2">
                    <label class="form-label label-mini">Foto URL</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.FotoUrl" />
                </div>
            </div>

            <div class="home-card p-4 mb-4">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="section-title mb-0">Especialidad</h6>

                    @if (_perfil.Especialidades.Count == 0)
                    {
                        <button type="button"
                                class="btn btn-sm btn-light text-primary fw-bold rounded-pill px-3"
                                @onclick="AbrirSelectorEspecialidades">
                            <i class="bi bi-plus-lg me-1"></i> Seleccionar
                        </button>
                    }
                </div>

                @if (_perfil.Especialidades.Count == 0)
                {
                    <div class="text-center py-3 bg-light rounded-3 border border-dashed">
                        <p class="text-muted small mb-0">No tienes especialidad asignada.</p>
                    </div>
                }
                else
                {
                    <div class="specialty-item d-flex justify-content-between align-items-center px-3 py-2 rounded-3 bg-light">
                        <span class="fw-bold">@_perfil.Especialidades[0].Nombre</span>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger py-0"
                                @onclick="() => QuitarEspecialidad(_perfil.Especialidades[0])">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                }
            </div>

            <div class="fixed-bottom-action p-3 bg-white shadow-lg border-top">

                @if (!string.IsNullOrWhiteSpace(_mensaje))
                {
                    <div class="alert alert-success small py-2 mb-2 text-center border-0 bg-success-subtle text-success fw-bold rounded-3">
                        <i class="bi bi-check-circle me-1"></i> @_mensaje
                    </div>
                }

                <button type="submit"
                        class="btn btn-primary btn-pill py-3 fw-bold w-100 shadow-sm"
                        disabled="@_guardando">
                    @if (_guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span> <span>Guardando...</span>
                    }
                    else
                    {
                        <span>Guardar Cambios</span>
                    }
                </button>

            </div>

        </EditForm>

        <div class="spacer-bottom-large"></div>
    </div>
}

@if (_mostrarModalEspecialidades && _todasEspecialidades is not null)
{
    <div class="modal-backdrop-custom" @onclick="CerrarModal"></div>

    <div class="modal-custom">

        <div class="modal-header-custom">
            <h6 class="mb-0">Seleccionar Especialidad</h6>

            <button class="btn-close-custom" @onclick="CerrarModal">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="modal-body-custom">
            @foreach (var esp in _todasEspecialidades)
            {
                <div class="modal-option @(esp.IdEspecialidad == _especialidadSeleccionadaId ? "selected" : "")"
                     @onclick="() => SeleccionarEspecialidad(esp.IdEspecialidad)">
                    @esp.Nombre
                </div>
            }
        </div>

        <div class="modal-footer-custom">
            <button class="btn btn-primary btn-pill w-100 fw-bold py-3 shadow-sm"
                    @onclick="ConfirmarEspecialidad">
                Confirmar Selección
            </button>
        </div>

    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrInicio">
        <i class="bi bi-house-door"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar3"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active">
        <i class="bi bi-person-fill"></i>
        <span>Perfil</span>
    </button>
</div>

@code {

    private AuthMeResponse? _usuario;
    private PerfilMedicoDTO? _perfil;

    private List<EspecialidadDTO>? _todasEspecialidades;

    private bool _cargando = true;
    private bool _guardando = false;
    private string _mensaje = string.Empty;

    private bool _mostrarModalEspecialidades = false;
    private int? _especialidadSeleccionadaId = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();
            if (_usuario is null || _usuario.Rol != "Medico")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            _perfil = await PerfilService.ObtenerAsync();
            _todasEspecialidades = await EspecialidadService.ListarAsync()
                                   ?? new List<EspecialidadDTO>();   
        }
        finally
        {
            _cargando = false;
        }
    }


    private async Task Guardar()
    {
        _guardando = true;

        var ok = await PerfilService.ActualizarAsync(_perfil!);

        _guardando = false;

        _mensaje = ok ? "Perfil actualizado correctamente." :
                        "Error al guardar.";
    }

    private void AbrirSelectorEspecialidades()
    {
        _especialidadSeleccionadaId = _perfil!.Especialidades.Count > 0
            ? _perfil.Especialidades[0].IdEspecialidad
            : null;

        _mostrarModalEspecialidades = true;
    }

    private void CerrarModal()
    {
        _mostrarModalEspecialidades = false;
    }

    private void SeleccionarEspecialidad(int id)
    {
        _especialidadSeleccionadaId = id;
    }

private void ConfirmarEspecialidad()
{
    if (_especialidadSeleccionadaId is null || _todasEspecialidades is null || _perfil is null)
        return;

    var esp = _todasEspecialidades
        .FirstOrDefault(e => e.IdEspecialidad == _especialidadSeleccionadaId.Value);

    if (esp is null) return;

    _perfil.EspecialidadId = esp.IdEspecialidad;
    _perfil.EspecialidadNombre = esp.Nombre;

    _perfil.Especialidades.Clear();
    _perfil.Especialidades.Add(new SimpleEspecialidadDTO
    {
        IdEspecialidad = esp.IdEspecialidad,
        Nombre = esp.Nombre
    });

    _mostrarModalEspecialidades = false;
}

    private void QuitarEspecialidad(SimpleEspecialidadDTO esp)
    {
        _perfil!.Especialidades.Remove(esp);
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString();

    private void IrInicio() => Nav.NavigateTo("/medico/home");
    private void IrTurnosHoy() => Nav.NavigateTo("/medico/turnos-hoy");
}