@page "/paciente/cambiar-password-forzado"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Movil.Services.Contrato
@using CliniPlus.Shared.DTOs
@inject IAuthService Auth
@inject IPacientePerfilService PerfilService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column justify-content-center align-items-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-3"></div>
        <span>Cargando...</span>
    </div>
}
else if (_usuario is null || _usuario.Rol != "Paciente")
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="home-greeting">
                <p class="home-hello">Seguridad</p>
                <h4 class="home-name">Cambiar contraseña</h4>
                <span class="badge badge-paciente mt-1">Paciente</span>
            </div>
        </div>

        <div class="home-card info-card p-4 mb-3">
            <div class="d-flex align-items-start gap-3">
                <i class="bi bi-shield-exclamation text-warning fs-4"></i>
                <div>
                    <h6 class="section-title mb-1 text-warning-emphasis">Acción Requerida</h6>
                    <p class="text-muted small mb-0" style="line-height: 1.4;">
                        Estás usando una contraseña temporal. Por seguridad, debés crear una nueva contraseña personal para continuar.
                    </p>
                </div>
            </div>
        </div>

        <div class="home-card p-4 mb-4">
            <div class="mb-3">
                <label class="label-mini">Contraseña actual (temporal)</label>
                <input type="password"
                       class="form-control input-modern"
                       placeholder="••••••"
                       @bind="_passwordActual" />
            </div>

            <div class="mb-3">
                <label class="label-mini">Nueva contraseña</label>
                <input type="password"
                       class="form-control input-modern"
                       placeholder="••••••"
                       @bind="_passwordNueva" />
            </div>

            <div class="mb-2">
                <label class="label-mini">Confirmar nueva contraseña</label>
                <input type="password"
                       class="form-control input-modern"
                       placeholder="••••••"
                       @bind="_passwordConfirmar" />
            </div>

            @if (!string.IsNullOrWhiteSpace(_mensaje))
            {
                <div class="alert @(_esError ? "alert-danger bg-danger-subtle text-danger" : "alert-success bg-success-subtle text-success") small py-2 mt-3 mb-0 border-0 rounded-3 text-center fw-bold">
                    @if (_esError)
                    {
                        <i class="bi bi-exclamation-circle me-1"></i>
                    }
                    else
                    {

                        <i class="bi bi-check-circle me-1"></i>
                    }
                    @_mensaje
                </div>
            }
        </div>

        <div class="fixed-bottom-action p-3 bg-white shadow-lg border-top">
            <button class="btn btn-primary btn-pill w-100 py-3 fw-bold shadow-sm"
                    @onclick="CambiarPassword"
                    disabled="@_procesando">
                @if (_procesando)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Actualizando...</span>
                }
                else
                {
                    <span>Confirmar Cambio</span>
                }
            </button>
        </div>

        <div class="spacer-bottom-large"></div>
    </div>
}

@code {
    private AuthMeResponse? _usuario;

    private string _passwordActual = "";
    private string _passwordNueva = "";
    private string _passwordConfirmar = "";

    private bool _cargando = true;
    private bool _procesando = false;
    private string _mensaje = "";
    private bool _esError = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();
            if (_usuario is null || _usuario.Rol != "Paciente")
            {
                Nav.NavigateTo("/", true);
                return;
            }
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CambiarPassword()
    {
        _mensaje = "";
        _esError = false;

        if (string.IsNullOrWhiteSpace(_passwordActual) ||
            string.IsNullOrWhiteSpace(_passwordNueva) ||
            string.IsNullOrWhiteSpace(_passwordConfirmar))
        {
            _mensaje = "Por favor, completá todos los campos.";
            _esError = true;
            return;
        }

        if (_passwordNueva != _passwordConfirmar)
        {
            _mensaje = "Las contraseñas nuevas no coinciden.";
            _esError = true;
            return;
        }

        _procesando = true;

        var dto = new CambiarPasswordDTO
        {
            PasswordActual = _passwordActual,
            PasswordNueva = _passwordNueva
        };

        var ok = await PerfilService.CambiarPasswordAsync(dto);

        _procesando = false;

        if (!ok)
        {
            _mensaje = "La contraseña actual es incorrecta.";
            _esError = true;
            return;
        }

        _mensaje = "¡Contraseña actualizada! Redirigiendo...";
        _esError = false;

        await Task.Delay(1500);
        Nav.NavigateTo("/paciente/home", true);
    }
}