@page "/paciente/home"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared
@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height: 60vh;">
        <div class="spinner-border text-success me-2"></div>
        <p class="mt-2 text-muted small">Cargando inicio...</p>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">
        <div class="home-header mb-4">
            <div class="home-greeting">
                <p class="home-hello">Hola,</p>
                <h4 class="home-name">@_usuario.NombreCompleto</h4>
                <span class="badge badge-paciente mt-1">
                    Paciente
                </span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <button class="btn-logout" @onclick="CerrarSesion" title="Cerrar sesión">
                    <i class="bi bi-box-arrow-right"></i>
                </button>
                <div class="home-avatar">
                    <span>@GetInicial(_usuario.NombreCompleto)</span>
                </div>
            </div>
        </div>

        <h6 class="section-title">Gestión de Turnos</h6>
        <div class="home-quick-actions mb-4">
            <button class="quick-card" @onclick="IrNuevoTurno">
                <div class="icon-box bg-blue-light">
                    <i class="bi bi-plus-lg text-blue"></i>
                </div>
                <span>Reservar Turno</span>
            </button>

            <button class="quick-card" @onclick="IrMisTurnos">
                <div class="icon-box bg-purple-light">
                    <i class="bi bi-calendar2-check text-purple"></i>
                </div>
                <span>Mis Turnos</span>
            </button>

            <button class="quick-card" @onclick="IrMedicosDisponibles">
                <div class="icon-box bg-teal-light">
                    <i class="bi bi-person"></i>
                </div>
                <span>Médicos disponibles</span>
            </button>
        </div>

        <h6 class="section-title">Mi Salud</h6>
        <div class="home-quick-actions mb-4">
            <button class="quick-card" @onclick="IrHistorial">
                <div class="icon-box bg-orange-light">
                    <i class="bi bi-file-earmark-medical text-orange"></i>
                </div>
                <span>Historial</span>
            </button>

            <button class="quick-card" @onclick="IrMiFichaMedica">
                <div class="icon-box bg-red-light">
                    <i class="bi bi-clipboard2-pulse text-danger"></i>
                </div>
                <span>Mi ficha médica</span>
            </button>
        </div>

        <h6 class="section-title">Datos Personales</h6>
        <div class="home-quick-actions mb-4">
            <button class="quick-card" @onclick="IrPerfilPaciente">
                <div class="icon-box bg-green-light">
                    <i class="bi bi-person-vcard text-green"></i>
                </div>
                <span>Mi Perfil</span>
            </button>
        </div>

        <div class="home-card mb-2">
            <div class="home-card-header">
                <span class="home-card-title">Próximo Turno</span>
                <i class="bi bi-clock-history text-muted fs-5"></i>
            </div>
            <div class="admin-metrics">
                <div class="metric-row">
                    <span class="metric-label">
                        <i class="bi bi-calendar-event me-2 text-primary"></i>Fecha
                    </span>
                    <span class="metric-value text-muted small fw-bold">Sin turnos</span>
                </div>
                <div class="metric-divider"></div>
                <div class="metric-row">
                    <span class="metric-label">
                        <i class="bi bi-person-badge me-2 text-success"></i>Médico
                    </span>
                    <span class="metric-value text-muted small fw-bold">—</span>
                </div>
            </div>
        </div>

        <div class="spacer-bottom"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item active" @onclick="IrInicio">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrMisTurnos">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrPerfilPaciente">
        <i class="bi bi-person"></i>
        <span>Perfil</span>
    </button>
    <button class="bottom-nav-item" @onclick="CerrarSesion">
        <i class="bi bi-box-arrow-right"></i>
        <span>Salir</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _cargando = true;
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Paciente")
            {
                Nav.NavigateTo("/", true);
                return;
            }
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CerrarSesion()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", true);
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void IrInicio() => Nav.NavigateTo("/paciente/home", true);
    private void IrNuevoTurno() => Nav.NavigateTo("/paciente/agenda");
    private void IrMisTurnos() => Nav.NavigateTo("/paciente/turnos");
    private void IrHistorial() => Nav.NavigateTo("/paciente/historial");
    private void IrPerfilPaciente() => Nav.NavigateTo("/paciente/perfil");
    private void IrMedicosDisponibles() => Nav.NavigateTo("/paciente/medicos");
    private void IrMiFichaMedica() => Nav.NavigateTo("/paciente/ficha-medica");
}
