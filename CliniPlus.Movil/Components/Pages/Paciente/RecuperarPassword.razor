@page "/recuperar-password"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using Microsoft.AspNetCore.Components.Forms
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject NavigationManager Nav

<div class="login-page">
    <div class="login-card">

        <!-- HEADER CON LOGO -->
        <div class="d-flex align-items-center justify-content-center mb-4 gap-3">
            <div class="logo-pure">
                <span class="bar-vertical"></span>
                <span class="bar-horizontal"></span>
            </div>
            <div class="brand-name">Clini<span>+</span></div>
        </div>

        <h5 class="login-title text-center mb-2">¿Olvidaste tu clave?</h5>
        <p class="login-subtitle text-center mb-4">
            Ingresá tu correo electrónico y te enviaremos una contraseña temporal.
        </p>

        <EditForm Model="_model" OnValidSubmit="EnviarRecuperacion">
            <DataAnnotationsValidator />

            <!-- EMAIL -->
            <div class="mb-4">
                <div class="input-group input-elevated">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <InputText @bind-Value="_model.Email"
                               class="form-control"
                               placeholder="Correo electrónico"
                               autocomplete="email" />
                </div>
                <ValidationMessage For="@(() => _model.Email)" class="text-danger small mt-1 ms-2" />
            </div>

            <!-- FEEDBACK MESSAGES -->
            @if (!string.IsNullOrWhiteSpace(_exito))
            {
                <div class="alert alert-success py-2 small mb-3 border-0 bg-success-subtle text-success fw-bold rounded-3 text-center">
                    <i class="bi bi-check-circle me-1"></i> @_exito
                </div>
            }
            @if (!string.IsNullOrWhiteSpace(_error))
            {
                <div class="alert alert-danger py-2 small mb-3 border-0 bg-danger-subtle text-danger fw-bold rounded-3 text-center">
                    <i class="bi bi-exclamation-triangle me-1"></i> @_error
                </div>
            }

            <!-- BOTÓN ENVIAR -->
            <button type="submit"
                    class="btn btn-primary btn-pill w-100 mb-3"
                    disabled="@_cargando">
                @if (_cargando)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                    <span>Enviando...</span>
                }
                else
                {
                    <span>Enviar instrucciones</span>
                }
            </button>

            <!-- VOLVER -->
            <button type="button"
                    class="btn btn-outline-secondary btn-pill w-100"
                    @onclick="VolverLogin"
                    disabled="@_cargando">
                <i class="bi bi-arrow-left me-1"></i> Volver al inicio
            </button>

        </EditForm>

        <p class="login-footer text-center mt-4 mb-0">
            Clini+ © 2025 – ITES Santa Rosa
        </p>
    </div>
</div>

@code {
    private class RecuperarPasswordModel
    {
        public string Email { get; set; } = string.Empty;
    }

    private RecuperarPasswordModel _model = new();
    private bool _cargando = false;
    private string? _error;
    private string? _exito;

    private async Task EnviarRecuperacion()
    {
        _error = null;
        _exito = null;
        _cargando = true;

        try
        {
            // Pequeña pausa para UX si la respuesta es muy rápida
            await Task.Delay(500);

            // Llama al endpoint
            var ok = await Auth.RecuperarPasswordAsync(_model.Email);

            if (ok)
            {
                _exito = "Si el correo es correcto, recibirás una nueva contraseña en breve.";
                _model.Email = string.Empty; // Limpiar campo
            }
            else
            {
                _error = "No pudimos procesar la solicitud. Verifica el correo ingresado.";
            }
        }
        catch (HttpRequestException)
        {
            _error = "No se pudo conectar al servidor. Intentalo más tarde.";
        }
        catch (Exception ex)
        {
            _error = $"Ocurrió un error inesperado: {ex.Message}";
        }
        finally
        {
            _cargando = false;
        }
    }

    private void VolverLogin() => Nav.NavigateTo("/", forceLoad: true);
}