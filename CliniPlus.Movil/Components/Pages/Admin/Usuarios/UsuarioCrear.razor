@page "/admin/usuarios/crear"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout
@using CliniPlus.Shared.DTOs
@using CliniPlus.Movil.Services.Contrato
@using CliniPlus.Shared
@using Microsoft.AspNetCore.Components.Forms
@inject IUsuarioService UsuarioService
@inject IAuthService Auth
@inject NavigationManager Nav

<div class="home-page">
    <div class="home-header mb-4">
        <div class="d-flex align-items-center gap-3">
            <BotonVolver />
            <div class="home-greeting">
                <p class="home-hello">Gestión</p>
                <h4 class="home-name mb-0">Nuevo Usuario</h4>
            </div>
        </div>
    </div>

    <div class="home-card p-4">
        <EditForm Model="_modelo" OnValidSubmit="GuardarAsync">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Nombre</label>
                <div class="input-group input-elevated">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-person"></i>
                    </span>
                    <InputText class="form-control border-0 bg-transparent"
                               placeholder="Ej. Juan"
                               @bind-Value="_modelo.Nombre" />
                </div>
                <ValidationMessage For="@(() => _modelo.Nombre)" />
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Apellido</label>
                <div class="input-group input-elevated">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-person-fill"></i>
                    </span>
                    <InputText class="form-control border-0 bg-transparent"
                               placeholder="Ej. Pérez"
                               @bind-Value="_modelo.Apellido" />
                </div>
                <ValidationMessage For="@(() => _modelo.Apellido)" />
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Email</label>
                <div class="input-group input-elevated">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <InputText class="form-control border-0 bg-transparent"
                               placeholder="nombre@ejemplo.com"
                               @bind-Value="_modelo.Email" />
                </div>
                <ValidationMessage For="@(() => _modelo.Email)" />
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold text-muted">Contraseña</label>
                <div class="input-group input-elevated">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-lock"></i>
                    </span>
                    <InputText type="password"
                               class="form-control border-0 bg-transparent"
                               placeholder="******"
                               @bind-Value="_modelo.Contraseña" />
                </div>
                <ValidationMessage For="@(() => _modelo.Contraseña)" />
            </div>

            <div class="mb-4">
                <label class="form-label small fw-bold text-muted">Rol asignado</label>
                <div class="input-group input-elevated">
                    <span class="input-group-text bg-transparent border-0">
                        <i class="bi bi-shield-lock"></i>
                    </span>
                    <InputSelect class="form-select border-0 bg-transparent" @bind-Value="_modelo.Rol">
                        <option value="">Selecciona un rol...</option>
                        @foreach (var rol in _rolesDisponibles)
                        {
                            <option value="@rol">@rol</option>
                        }
                    </InputSelect>
                </div>
                <ValidationMessage For="@(() => _modelo.Rol)" />
            </div>

            <button type="submit"
                    class="btn btn-primary btn-pill w-100 shadow-sm py-2"
                    disabled="@_guardando">
                @if (_guardando)
                {
                    <span>
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        Guardando...
                    </span>
                }
                else
                {
                    <span>Crear Usuario</span>
                }
            </button>

            @if (!string.IsNullOrWhiteSpace(_error))
            {
                <div class="alert alert-danger mt-3 small text-center border-0 bg-danger-subtle text-danger">
                    <i class="bi bi-exclamation-circle me-1"></i> @_error
                </div>
            }
        </EditForm>
    </div>

    <div class="spacer-bottom"></div>
</div>

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrInicio">
        <i class="bi bi-house-door"></i>
        <span>Inicio</span>
    </button>

    <button class="bottom-nav-item active">
        <i class="bi bi-people-fill"></i>
        <span>Usuarios</span>
    </button>

    <button class="bottom-nav-item text-danger" @onclick="CerrarSesion">
        <i class="bi bi-box-arrow-right"></i>
        <span>Salir</span>
    </button>
</div>

@code {
    private UsuarioCrearDTO _modelo = new();
    private bool _guardando = false;
    private string? _error;

    private readonly string[] _rolesDisponibles = { "Administrador", "Secretario", "Medico", "Paciente" };

    private async Task GuardarAsync()
    {
        _error = null;
        _guardando = true;

        try
        {
            var res = await UsuarioService.CrearAsync(_modelo);

            if (res is null)
            {
                _error = "No se pudo crear. Verifica el email.";
                return; // El finally se encarga del _guardando = false
            }

            Nav.NavigateTo("/admin/usuarios", true);
        }
        catch (Exception ex)
        {
            _error = "Error de conexión: " + ex.Message;
        }
        finally
        {
            _guardando = false;
        }
    }

    private void IrInicio() => Nav.NavigateTo("/admin/home");

    private async Task CerrarSesion()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", true);
    }
}