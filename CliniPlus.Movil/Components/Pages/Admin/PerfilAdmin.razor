@page "/Administrador/perfil"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Movil.Services.Contrato
@using CliniPlus.Shared.DTOs
@using Microsoft.AspNetCore.Components.Forms

@inject IAuthService Auth
@inject IAdminPerfilService PerfilService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column justify-content-center align-items-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-3"></div>
        <span>Cargando perfil...</span>
    </div>
}
else if (_usuario is null || _perfil is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <!-- HEADER -->
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="IrInicio">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Mi Cuenta</p>
                    <h4 class="home-name">Administrador</h4>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <!-- FORMULARIO -->
        <EditForm Model="_perfil" OnValidSubmit="Guardar">
            <DataAnnotationsValidator />

            <!-- DATOS PERSONALES -->
            <div class="home-card p-4 mb-3">
                <h6 class="section-title mb-3">Datos personales</h6>

                <div class="mb-3">
                    <label class="label-mini">Nombre</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Nombre" />
                </div>

                <div class="mb-3">
                    <label class="label-mini">Apellido</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Apellido" />
                </div>

                <div class="mb-2">
                    <label class="label-mini">Email</label>
                    <InputText class="form-control input-modern" @bind-Value="_perfil.Email" />
                </div>
            </div>

            <!-- INFO DEL SISTEMA -->
            <div class="home-card p-4 mb-3">
                <h6 class="section-title mb-3">Información del sistema</h6>

                <div class="info-row">
                    <span class="info-label">Rol</span>
                    <span class="info-value">Administrador</span>
                </div>

                <div class="info-row">
                    <span class="info-label">Miembro desde</span>
                    <span class="info-value">@_perfil.FechaRegistro.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            <!-- SEGURIDAD -->
            <div class="home-card p-4 mb-4">
                <h6 class="section-title mb-3">Seguridad</h6>
                <button type="button" class="btn btn-outline-primary w-100 d-flex justify-content-center align-items-center gap-2"
                        @onclick="AbrirModalPassword">
                    <i class="bi bi-shield-lock"></i>
                    Cambiar contraseña
                </button>
            </div>

            <!-- BOTÓN GUARDAR -->
            <div class="fixed-bottom-action p-3 bg-white shadow-lg border-top">
                @if (!string.IsNullOrWhiteSpace(_mensaje))
                {
                    <div class="alert alert-success small py-2 mb-2 text-center border-0 bg-success-subtle text-success fw-bold rounded-3">
                        <i class="bi bi-check-circle me-1"></i> @_mensaje
                    </div>
                }

                <button type="submit"
                        class="btn btn-primary btn-pill w-100 py-3 fw-bold shadow-sm"
                        disabled="@_guardando">
                    @if (_guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <span>Guardar Cambios</span>
                    }
                </button>
            </div>
        </EditForm>

        <div class="spacer-bottom-large"></div>
    </div>
}

<!-- MODAL CAMBIAR PASSWORD (ESTILO SHEET) -->
@if (_mostrarModalPassword)
{
    <div class="modal-backdrop-custom" @onclick="CerrarModalPassword"></div>

    <div class="modal-custom">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h6 class="mb-0 fw-bold fs-5">Cambiar Contraseña</h6>
            <button class="btn-close-custom" @onclick="CerrarModalPassword">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="mb-3">
            <label class="label-mini">Contraseña actual</label>
            <InputText class="form-control input-modern" type="password"
                       placeholder="••••••"
                       @bind-Value="_passwordActual" />
        </div>

        <div class="mb-4">
            <label class="label-mini">Nueva contraseña</label>
            <InputText class="form-control input-modern" type="password"
                       placeholder="••••••"
                       @bind-Value="_passwordNueva" />
        </div>

        <button class="btn btn-primary btn-pill w-100 py-3 fw-bold shadow-sm"
                @onclick="CambiarPassword">
            Confirmar Cambio
        </button>
    </div>
}

<!-- BOTTOM NAV -->
<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrInicio">
        <i class="bi bi-house-door"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item active">
        <i class="bi bi-person-fill"></i>
        <span>Perfil</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private PerfilAdminDTO? _perfil;
    private bool _cargando = true;
    private bool _guardando = false;
    private string _mensaje = "";

    // Modal
    private bool _mostrarModalPassword = false;
    private string _passwordActual = "";
    private string _passwordNueva = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();
            if (_usuario is null || _usuario.Rol != "Administrador")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            _perfil = await PerfilService.ObtenerAsync();
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task Guardar()
    {
        _guardando = true;
        var ok = await PerfilService.ActualizarAsync(_perfil!);
        _guardando = false;

        _mensaje = ok ? "Datos actualizados correctamente." : "Error al actualizar.";
    }

    private void AbrirModalPassword() => _mostrarModalPassword = true;

    private void CerrarModalPassword() => _mostrarModalPassword = false;

    private async Task CambiarPassword()
    {
        var dto = new CambiarPasswordDTO
        {
            PasswordActual = _passwordActual,
            PasswordNueva = _passwordNueva
        };

        var ok = await PerfilService.CambiarPasswordAsync(dto);

        if (ok)
        {
            _mensaje = "Contraseña cambiada correctamente.";
            CerrarModalPassword();
        }
        else
        {
            _mensaje = "Error: contraseña actual incorrecta.";
        }

        _passwordActual = "";
        _passwordNueva = "";
    }

    private void IrInicio() => Nav.NavigateTo("/Administrador/home", true);

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();
}