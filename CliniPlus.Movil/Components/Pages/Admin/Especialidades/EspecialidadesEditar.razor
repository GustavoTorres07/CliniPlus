@page "/Administrador/especialidades/{Id:int}"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout
@using CliniPlus.Movil.Services.Contrato
@using CliniPlus.Shared.DTOs
@using CliniPlus.Shared
@inject IEspecialidadService SpecialService
@inject IAuthService Auth
@inject NavigationManager Nav

@if (_loading)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height: 60vh;">
        <div class="spinner-border text-primary mb-3"></div>
        <span>Cargando datos...</span>
    </div>
}
else if (_model is null)
{
    <div class="home-page text-center pt-5">
        <BotonVolver />
        <p class="text-danger mt-4">Especialidad no encontrada.</p>
    </div>
}
else
{
    <div class="home-page">
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <BotonVolver />
                <div class="home-greeting">
                    <p class="home-hello">Gestion</p>
                    <h4 class="home-name mb-0">Editar Especialidad</h4>
                </div>
            </div>
        </div>

        <div class="home-card p-4">
            <EditForm Model="_model" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted">Nombre de la especialidad</label>
                    <div class="input-group input-elevated">
                        <span class="input-group-text bg-transparent border-0"><i class="bi bi-tag"></i></span>
                        <InputText class="form-control border-0 bg-transparent" placeholder="Ej. Cardiología" @bind-Value="_model.Nombre" />
                    </div>
                    <ValidationMessage For="@(() => _model.Nombre)" />
                </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted">Descripción</label>
                    <div class="input-elevated p-2" style="height: auto;">
                        <InputTextArea class="form-control border-0 bg-transparent" rows="3" placeholder="Breve descripción..." @bind-Value="_model.Descripcion"></InputTextArea>
                    </div>
                </div>

                <div class="form-check form-switch mb-4">
                    <InputCheckbox class="form-check-input" id="isActiveSwitch" @bind-Value="_model.IsActive" />
                    <label class="form-check-label" for="isActiveSwitch">
                        @(_model.IsActive ? "Actualmente Activa" : "Actualmente Inactiva")
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-pill w-100 shadow-sm py-2">
                    Guardar Cambios
                </button>
            </EditForm>

            <hr class="my-4 opacity-25" />

            <button class="btn btn-outline-danger btn-pill w-100" @onclick="ToggleEstado">
                <i class="bi @(_model.IsActive ? "bi-x-circle" : "bi-check-circle") me-2"></i>
                @(_model.IsActive ? "Desactivar Especialidad" : "Activar Especialidad")
            </button>
        </div>

        <div class="spacer-bottom"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrInicio">
        <i class="bi bi-house-door"></i>
        <span>Inicio</span>
    </button>
    
    <button class="bottom-nav-item active">
        <i class="bi bi-grid-3x3-gap-fill"></i>
        <span>Espec.</span>
    </button>

    <button class="bottom-nav-item text-danger" @onclick="CerrarSesion">
        <i class="bi bi-box-arrow-right"></i>
        <span>Salir</span>
    </button>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private EspecialidadDTO? _model;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            _model = await SpecialService.ObtenerAsync(Id);
        }
        catch
        {
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Guardar()
    {
        if (_model is null) return;
        await SpecialService.EditarAsync(Id, _model);
        Nav.NavigateTo("/Administrador/especialidades", true); 
    }

    private async Task ToggleEstado()
    {
        if (_model is null) return;
        bool nuevoEstado = !_model.IsActive;
        await SpecialService.CambiarEstadoAsync(Id, nuevoEstado);
        _model.IsActive = nuevoEstado;
    }

    private void IrInicio() => Nav.NavigateTo("/Administrador/home");
    
    private async Task CerrarSesion()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", true);
    }
}