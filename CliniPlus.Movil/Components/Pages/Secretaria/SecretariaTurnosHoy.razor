@page "/secretaria/turnos/hoy"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.ITurnoService TurnoService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando turnos de hoy...</p>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverHome">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaria</p>
                    <h4 class="home-name">Turnos de hoy</h4>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="date-display">
                <i class="bi bi-calendar-event text-primary"></i>
                <span>@DateTime.Now.ToString("dddd, dd MMMM", new System.Globalization.CultureInfo("es-ES"))</span>
            </div>
        </div>

        @if (_turnos is null || _turnos.Count == 0)
        {
            <div class="home-card p-5 text-center border-dashed mt-3">
                <i class="bi bi-calendar-x text-muted fs-1 mb-3 d-block"></i>
                <p class="text-muted small mb-0 fw-bold">Sin actividad</p>
                <span class="text-muted small">No hay turnos registrados para el dia de hoy.</span>
            </div>
        }
        else
        {
            <div class="d-flex flex-column gap-3 mb-5 mt-3">
                @foreach (var t in _turnos)
                {
                    <div class="home-card p-3 fade-in">
                        <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom border-light">
                            <span class="fw-bold text-dark fs-5">
                                @t.ScheduledAtUtc.ToLocalTime().ToString("HH:mm") <small class="text-muted fs-6">hs</small>
                            </span>
                            <span class="badge @GetBadgeClass(t.Estado)" style="font-size:0.7rem;">
                                @t.Estado
                            </span>
                        </div>

                        <div class="small text-muted mb-1 d-flex align-items-center">
                            <i class="bi bi-person-badge me-2 text-primary fs-6"></i>
                            <div class="text-truncate">
                                <span class="fw-bold text-dark">@t.MedicoNombre</span>
                                @if (!string.IsNullOrWhiteSpace(t.EspecialidadNombre))
                                {
                                    <span class="d-block text-muted" style="font-size: 0.75rem;">@t.EspecialidadNombre</span>
                                }
                            </div>
                        </div>

                        <div class="small text-muted mb-2 d-flex align-items-center bg-light rounded-3 p-2 mt-2">
                            <i class="bi bi-person me-2 text-success fs-5"></i>
                            <div>
                                <span class="d-block fw-bold text-dark">
                                    @(!string.IsNullOrWhiteSpace(t.PacienteNombre) ? t.PacienteNombre : "Sin asignar")
                                </span>
                                @if (!string.IsNullOrWhiteSpace(t.PacienteDni))
                                {
                                    <span class="text-muted">DNI: @t.PacienteDni</span>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="small text-muted">
                                @if (!string.IsNullOrWhiteSpace(t.TipoTurnoNombre))
                                {
                                    <span><i class="bi bi-tag me-1"></i>@t.TipoTurnoNombre</span>
                                }
                            </span>

                            @if (EsCancelable(t.Estado))
                            {
                                <button class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                        @onclick="() => CancelarTurno(t.IdTurno)">
                                    <i class="bi bi-x-circle me-1"></i> Cancelar
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <div class="spacer-bottom-large" style="height: 80px;"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrHome">
        <i class="bi bi-house-door"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrPacientes">
        <i class="bi bi-people"></i>
        <span>Pacientes</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private List<TurnoListadoSecretariaDTO> _turnos = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            await CargarTurnos();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarTurnos()
    {
        _turnos = await TurnoService.ListarTurnosHoySecretariaAsync()
                  ?? new List<TurnoListadoSecretariaDTO>();
        StateHasChanged();
    }

    private async Task CancelarTurno(int turnoId)
    {
        var ok = await TurnoService.CancelarTurnoSecretariaAsync(turnoId);

        if (ok)
        {
            await CargarTurnos();
        }
    }

    
    private bool EsCancelable(string estado)
        => string.Equals(estado, "Reservado", StringComparison.OrdinalIgnoreCase);

    private string GetBadgeClass(string estado)
    {
        return estado switch
        {
            "Reservado" => "bg-primary-subtle text-primary",
            "Atendido" => "bg-success-subtle text-success",
            "Completado" => "bg-success-subtle text-success",
            "Cancelado" => "bg-danger-subtle text-danger",
            "No Asistio" => "bg-warning-subtle text-warning",
            _ => "bg-light text-dark"
        };
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/admin/pacientes", true);
}
