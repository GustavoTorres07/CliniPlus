@page "/secretaria/medicos/{Id:int}"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IMedicoService MedicoService
@inject CliniPlus.Movil.Services.Contrato.IEspecialidadService EspecialidadService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:70vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando datos del médico...</p>
    </div>
}
else if (_usuario is null || _usuario.Rol != "Secretaria")
{
    <RedirectToLogin />
}
else if (_medico is null)
{
    <div class="home-page">
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverListado">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Médico</p>
                    <h4 class="home-name">No encontrado</h4>
                </div>
            </div>
        </div>

        <div class="home-card p-5 text-center border-dashed">
            <i class="bi bi-emoji-frown text-muted fs-1 mb-3 d-block"></i>
            <p class="text-muted small mb-0">No se encontró información para este médico.</p>
        </div>
    </div>
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverListado">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name text-truncate" style="max-width: 200px;">
                        @_medico.NombreCompleto
                    </h4>
                    <span class="badge badge-secretaria mt-1">Médico</span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <div class="home-card p-4 mb-3">
            <div class="d-flex align-items-center mb-3">
                <div class="doctor-avatar-large me-3">
                    @GetInicial(_medico.NombreCompleto)
                </div>
                <div class="flex-grow-1">
                    <div class="fw-bold text-dark fs-5">@_medico.NombreCompleto</div>

                    @if (!string.IsNullOrWhiteSpace(_medico.EspecialidadNombre))
                    {
                        <div class="small text-muted d-flex align-items-center mt-1">
                            <i class="bi bi-heart-pulse me-2 text-danger"></i>
                            @_medico.EspecialidadNombre
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(_medico.Email))
                    {
                        <div class="small text-muted d-flex align-items-center mt-1">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            <span class="text-truncate" style="max-width: 150px;">@_medico.Email</span>
                        </div>
                    }
                </div>

                <span class="badge-status @( _medico.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                    @(_medico.IsActive ? "Activo" : "Inactivo")
                </span>
            </div>
        </div>

        <div class="home-card p-4 mb-5">
            <h6 class="section-title mb-3">Editar Información</h6>

            <EditForm Model="_editModel" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="label-mini">Especialidad</label>
                    <InputSelect class="form-select input-modern"
                                 @bind-Value="_editModel.EspecialidadId">
                        <option value="">Sin especialidad</option>
                        @foreach (var e in _especialidades)
                        {
                            <option value="@e.IdEspecialidad">@e.Nombre</option>
                        }
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="label-mini">Duración por turno (min)</label>
                    <InputNumber class="form-control input-modern"
                                 @bind-Value="_editModel.DefaultSlotMin" />
                    <p class="small text-muted mt-1 fst-italic">
                        Tiempo estándar para la agenda (ej: 20).
                    </p>
                </div>

                <div class="mb-3">
                    <label class="label-mini">Biografía</label>
                    <InputTextArea class="form-control input-modern"
                                   rows="3"
                                   @bind-Value="_editModel.Bio"
                                   placeholder="Breve descripción..." />
                </div>

                <div class="mb-3">
                    <label class="label-mini">URL de Foto</label>
                    <InputText class="form-control input-modern"
                               @bind-Value="_editModel.FotoUrl"
                               placeholder="https://..." />
                </div>

                @if (!string.IsNullOrWhiteSpace(_mensaje))
                {
                    <div class="alert @( _error ? "alert-danger bg-danger-subtle text-danger" : "alert-success bg-success-subtle text-success") py-2 px-3 small mb-3 rounded-3 border-0 text-center">
                        <i class="bi @( _error ? "bi-exclamation-triangle" : "bi-check-circle") me-1"></i> @_mensaje
                    </div>
                }

                <button type="submit"
                        class="btn btn-primary w-100 py-2 shadow-sm"
                        disabled="@_guardando">
                    @if (_guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <i class="bi bi-save me-1"></i>
                        <span>Guardar Cambios</span>
                    }
                </button>
            </EditForm>
        </div>

        <div class="spacer-bottom-large" style="height: 80px;"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrMedicos">
        <i class="bi bi-person-badge"></i>
        <span>Médicos</span>
    </button>
</div>

@code {
    [Parameter] public int Id { get; set; } 

    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _guardando = false;
    private bool _error = false;

    private MedicoDetalleDTO? _medico;
    private MedicoEditarDTO _editModel = new();
    private List<EspecialidadDTO> _especialidades = new();

    private string _mensaje = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            if (Id <= 0)
            {
                Nav.NavigateTo("/secretaria/medicos", true);
                return;
            }

            _medico = await MedicoService.ObtenerAsync(Id);
            if (_medico is null)
            {
                _cargando = false;
                return;
            }

            _especialidades = await EspecialidadService.ListarAsync()
                              ?? new List<EspecialidadDTO>();

            _editModel = new MedicoEditarDTO
            {
                Bio = _medico.Bio,
                FotoUrl = _medico.FotoUrl,
                DefaultSlotMin = _medico.DefaultSlotMin,
                EspecialidadId = _medico.EspecialidadId
            };
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task Guardar()
    {
        _guardando = true;
        _mensaje = string.Empty;
        _error = false;

        try
        {
            var actualizado = await MedicoService.EditarAsync(Id, _editModel);

            if (actualizado is null)
            {
                _error = true;
                _mensaje = "No se pudo guardar la información.";
            }
            else
            {
                _error = false;
                _mensaje = "Datos actualizados correctamente.";
                _medico = actualizado; 
                
                 _ = Task.Delay(3000).ContinueWith(_ => { _mensaje = ""; InvokeAsync(StateHasChanged); });
            }
        }
        catch
        {
            _error = true;
            _mensaje = "Ocurrió un error al guardar los cambios.";
        }
        finally
        {
            _guardando = false;
            StateHasChanged();
        }
    }

    private string GetInicial(string? nombre) => 
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverListado() => Nav.NavigateTo("/secretaria/medicos", true);
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrMedicos() => Nav.NavigateTo("/secretaria/medicos", true);
}