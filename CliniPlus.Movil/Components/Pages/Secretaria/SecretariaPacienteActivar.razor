@page "/secretaria/pacientes/activar/{PacienteId:int}"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using System.ComponentModel.DataAnnotations
@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IPacienteService PacienteService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando formulario...</p>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">
        <!-- HEADER -->
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverListado">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name">Activar cuenta</h4>
                    <span class="badge badge-secretaria mt-1">
                        Paciente provisional
                    </span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <EditForm Model="_model" OnValidSubmit="OnSubmitAsync">
            <DataAnnotationsValidator />
            
            <!-- Tarjeta del Formulario -->
            <div class="home-card p-4 mb-3">
                <h6 class="section-title mb-4">Datos para activar</h6>

                <div class="mb-3">
                    <label class="label-mini">ID Paciente</label>
                    <input class="form-control input-modern"
                           value="@PacienteId"
                           disabled />
                </div>

                <div class="mb-3">
                    <label class="label-mini">DNI del paciente</label>
                    <InputText @bind-Value="_model.DNI"
                               class="form-control input-modern" 
                               placeholder="Ingrese DNI" />
                    <ValidationMessage For="@(() => _model.DNI)" class="text-danger small mt-1" />
                </div>

                <div class="mb-3">
                    <label class="label-mini">Usuario (IdUsuario ya creado)</label>
                    <InputNumber @bind-Value="_model.UsuarioId"
                                 class="form-control input-modern" 
                                 placeholder="ID de Usuario" />
                    <div class="d-flex align-items-start gap-2 mt-1">
                        <i class="bi bi-info-circle text-primary small mt-1"></i>
                        <small class="text-muted" style="line-height: 1.3;">
                            Debe ser un usuario existente con rol <strong>Paciente</strong>.
                        </small>
                    </div>
                    <ValidationMessage For="@(() => _model.UsuarioId)" class="text-danger small mt-1" />
                </div>

                <div class="mb-3">
                    <label class="label-mini">Email</label>
                    <InputText @bind-Value="_model.Email"
                               class="form-control input-modern" 
                               placeholder="correo@ejemplo.com" />
                    <ValidationMessage For="@(() => _model.Email)" class="text-danger small mt-1" />
                </div>

                <div class="mb-4">
                    <label class="label-mini">Teléfono</label>
                    <InputText @bind-Value="_model.Telefono"
                               class="form-control input-modern" 
                               placeholder="Número de contacto" />
                    <ValidationMessage For="@(() => _model.Telefono)" class="text-danger small mt-1" />
                </div>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="alert alert-danger py-2 small mb-3 d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @_error
                    </div>
                }

                @if (!string.IsNullOrWhiteSpace(_ok))
                {
                    <div class="alert alert-success py-2 small mb-3 d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i> @_ok
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100 shadow-soft" disabled="@_procesando">
                    @if (_procesando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Activando...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-unlock-fill me-2"></i> Activar cuenta</span>
                    }
                </button>
            </div>
        </EditForm>

        <div class="spacer-bottom-large" style="height:80px;"></div>
    </div>
}

<!-- BOTTOM NAV -->
<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrPacientes">
        <i class="bi bi-people-fill"></i>
        <span>Pacientes</span>
    </button>
</div>

@code {
    [Parameter] public int PacienteId { get; set; }

    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _procesando = false;

    private ActivarCuentaModel _model = new();

    private string? _error;
    private string? _ok;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            // Pre-cargamos el ID en el modelo
            _model.PacienteId = PacienteId;
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task OnSubmitAsync()
    {
        _error = null;
        _ok = null;
        _procesando = true;

        try
        {
            var dto = new PacienteActivarCuentaDTO
            {
                PacienteId = _model.PacienteId,
                UsuarioId = _model.UsuarioId,
                DNI = _model.DNI ?? string.Empty,
                Email = _model.Email,
                Telefono = _model.Telefono
            };

            var ok = await PacienteService.ActivarCuentaProvisionalAsync(dto);

            if (!ok)
            {
                _error = "No se pudo activar la cuenta. Verifique los datos.";
            }
            else
            {
                _ok = "Cuenta activada correctamente. El paciente ya puede usar la app.";
                // Opcional: volver al listado tras unos segundos
                // await Task.Delay(2000);
                // VolverListado();
            }
        }
        catch (Exception)
        {
            _error = "Ocurrió un error al intentar activar la cuenta.";
        }
        finally
        {
            _procesando = false;
        }
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverListado() => Nav.NavigateTo("/secretaria/pacientes", true);
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/secretaria/pacientes", true);

    // ViewModel interno
    private class ActivarCuentaModel
    {
        public int PacienteId { get; set; }

        [Required(ErrorMessage = "Debe indicar el usuario.")]
        public int UsuarioId { get; set; }

        [Required(ErrorMessage = "Debe indicar el DNI.")]
        public string? DNI { get; set; }

        [EmailAddress(ErrorMessage = "Formato de email inválido.")]
        public string? Email { get; set; }

        public string? Telefono { get; set; }
    }
}