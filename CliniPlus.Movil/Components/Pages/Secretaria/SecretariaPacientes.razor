@page "/secretaria/pacientes"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IPacienteService PacienteService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando pacientes...</p>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <!-- HEADER -->
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverHome">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name">Pacientes</h4>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <!-- BUSCADOR -->
        <div class="px-1 mb-3">
            <div class="input-group input-elevated">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input class="form-control"
                       placeholder="Buscar por nombre o DNI..."
                       value="@_busqueda"
                       @oninput="OnBusquedaInput" />
            </div>
            <p class="text-muted small mt-2 mb-0 ms-2">
                Total: <strong>@_pacientesFiltrados.Count</strong> pacientes encontrados
            </p>
        </div>

        <!-- LISTADO -->
        @if (_cargandoLista)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary spinner-border-sm mb-2"></div>
                <p class="small text-muted mb-0">Actualizando listado...</p>
            </div>
        }
        else if (_pacientesFiltrados is null || _pacientesFiltrados.Count == 0)
        {
            <div class="home-card p-5 text-center border-dashed mt-3">
                <i class="bi bi-people text-muted fs-1 mb-3 d-block"></i>
                <p class="text-muted small mb-0 fw-bold">Sin resultados</p>
                <span class="text-muted small">No se encontraron pacientes con ese criterio.</span>
            </div>
        }
        else
        {
<div class="d-flex flex-column gap-3 mb-5">
    @foreach (var p in _pacientesFiltrados)
    {
        <div class="patient-item fade-in">

            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="d-flex align-items-center gap-3" @onclick="@(() => IrDetallePaciente(p.IdPaciente))" style="cursor:pointer;">
                    <div class="patient-avatar-small">
                        @GetInicial(p.NombreCompleto)
                    </div>
                    <div>
                        <div class="fw-bold text-dark text-truncate" style="max-width: 180px;">
                            @p.NombreCompleto
                        </div>
                        <div class="small text-muted">
                            <i class="bi bi-person-vcard me-1 text-primary"></i>
                            DNI: @p.DNI
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column align-items-end gap-1">
                    <span class="badge-status @(p.IsProvisional ? "bg-warning-subtle text-warning" : "bg-success-subtle text-success")">
                        @(p.IsProvisional ? "Provisorio" : "Activo")
                    </span>

                    @if (p.IsProvisional)
                    {
                        <button class="btn btn-sm btn-outline-primary mt-1"
                                @onclick="@(() => IrActivarCuenta(p.IdPaciente))">
                            <i class="bi bi-unlock me-1"></i> Activar cuenta
                        </button>
                    }
                </div>
            </div>

            <div class="small text-muted mt-2 pt-2 border-top border-light d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-hospital me-1 text-success"></i>
                    @if (!string.IsNullOrWhiteSpace(p.ObraSocialNombre))
                    {
                        @p.ObraSocialNombre
                    }
                    else
                    {
                        <span class="fst-italic text-muted">Sin obra social</span>
                    }
                </span>

                <i class="bi bi-chevron-right text-primary" @onclick="@(() => IrDetallePaciente(p.IdPaciente))" style="cursor:pointer;"></i>
            </div>
        </div>
    }
</div>

        }

        <div class="spacer-bottom-large"></div>
    </div>
}

<!-- BOTTOM NAV -->
<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="VolverHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrPacientes">
        <i class="bi bi-people-fill"></i>
        <span>Pacientes</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _cargandoLista = false;

    private List<PacienteListadoDTO> _pacientes = new();
    private List<PacienteListadoDTO> _pacientesFiltrados = new();
    private string _busqueda = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _cargando = true;
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            await CargarPacientes();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarPacientes()
    {
        _cargandoLista = true;
        try
        {
            _pacientes = await PacienteService.ListarPacientesSecretariaAsync()
                         ?? new List<PacienteListadoDTO>();

            AplicarFiltro();
        }
        finally
        {
            _cargandoLista = false;
            StateHasChanged();
        }
    }

    private void OnBusquedaInput(ChangeEventArgs e)
    {
        _busqueda = e.Value?.ToString() ?? string.Empty;
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(_busqueda))
        {
            _pacientesFiltrados = _pacientes
                .OrderBy(p => p.NombreCompleto)
                .ToList();
        }
        else
        {
            var texto = _busqueda.Trim().ToLower();

            _pacientesFiltrados = _pacientes
                .Where(p =>
                    (!string.IsNullOrWhiteSpace(p.NombreCompleto) && p.NombreCompleto.ToLower().Contains(texto)) ||
                    (!string.IsNullOrWhiteSpace(p.DNI) && p.DNI.ToLower().Contains(texto)))
                .OrderBy(p => p.NombreCompleto)
                .ToList();
        }
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/secretaria/pacientes", true);

private void IrDetallePaciente(int pacienteId)
{
    Nav.NavigateTo($"/secretaria/pacientes/{pacienteId}", true);
}

private void IrActivarCuenta(int pacienteId)
{
    Nav.NavigateTo($"/secretaria/pacientes/activar/{pacienteId}");
}

}