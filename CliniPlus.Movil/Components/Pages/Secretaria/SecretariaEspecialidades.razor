@page "/secretaria/especialidades"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IEspecialidadService EspecialidadService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando especialidades...</p>
    </div>
}
else if (_usuario is null || _usuario.Rol != "Secretaria")
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <!-- HEADER -->
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverHome">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name">Especialidades</h4>
                    <span class="badge badge-secretaria mt-1">Gestión</span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <!-- LISTADO HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-3 px-1">
            <h6 class="section-title mb-0">Listado</h6>
            
            <!-- El botón solo se muestra si el formulario está oculto -->
            @if (!_mostrarFormulario)
            {
                <button class="btn btn-sm btn-primary btn-pill px-3 shadow-sm"
                        @onclick="NuevaEspecialidad">
                    <i class="bi bi-plus-lg me-1"></i> Nueva
                </button>
            }
        </div>

        <!-- FORMULARIO ALTA / EDICIÓN (OCULTO POR DEFECTO) -->
        @if (_mostrarFormulario)
        {
            <div class="home-card p-4 mb-4 shadow-sm fade-in border-primary">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="section-title mb-0 text-primary">
                        @(_esEdicion ? "Editar especialidad" : "Nueva especialidad")
                    </h6>
                    <button class="btn btn-sm btn-light rounded-circle" @onclick="CancelarEdicion">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <EditForm Model="_editModel" OnValidSubmit="GuardarEspecialidad">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="label-mini">Nombre</label>
                        <InputText class="form-control input-modern"
                                   @bind-Value="_editModel.Nombre"
                                   placeholder="Ej: Cardiología" />
                    </div>

                    <div class="mb-3">
                        <label class="label-mini">Descripción</label>
                        <InputTextArea class="form-control input-modern"
                                       rows="2"
                                       @bind-Value="_editModel.Descripcion"
                                       placeholder="Descripción breve..." />
                    </div>

                    <div class="form-check form-switch mb-3 ms-1">
                        <InputCheckbox class="form-check-input"
                                       id="espActive"
                                       @bind-Value="_editModel.IsActive" />
                        <label class="form-check-label small text-muted fw-bold ms-2" for="espActive">
                            Especialidad activa
                        </label>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(_mensaje))
                    {
                        <div class="alert @( _error ? "alert-danger bg-danger-subtle text-danger" : "alert-success bg-success-subtle text-success") py-2 px-3 small mb-3 rounded-3 border-0 text-center">
                            <i class="bi @( _error ? "bi-exclamation-triangle" : "bi-check-circle") me-1"></i> @_mensaje
                        </div>
                    }

                    <div class="d-flex gap-2">
                        <button type="button" 
                                class="btn btn-outline-secondary w-50 py-2 rounded-3 fw-bold"
                                @onclick="CancelarEdicion">
                            Cancelar
                        </button>
                        <button type="submit"
                                class="btn btn-primary w-50 py-2 shadow-sm"
                                disabled="@_guardando">
                            @if (_guardando)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            else
                            {
                                <i class="bi bi-save me-1"></i>
                            }
                            @(_esEdicion ? "Guardar" : "Crear")
                        </button>
                    </div>
                </EditForm>
            </div>
        }

        <!-- LISTADO ITEMS -->
        <div class="d-flex flex-column gap-2 mb-5">
            @if (_especialidades is null || _especialidades.Count == 0)
            {
                <div class="home-card p-4 text-center border-dashed">
                    <i class="bi bi-clipboard-x text-muted fs-1 mb-2"></i>
                    <p class="small text-muted mb-0">No hay especialidades registradas.</p>
                </div>
            }
            else
            {
                @foreach (var e in _especialidades)
                {
                    <div class="specialty-card fade-in">
                        <div class="d-flex flex-column" style="max-width: 70%;">
                            <span class="fw-bold text-dark">@e.Nombre</span>
                            @if (!string.IsNullOrWhiteSpace(e.Descripcion))
                            {
                                <span class="small text-muted text-truncate">
                                    @e.Descripcion
                                </span>
                            }
                        </div>

                        <div class="d-flex flex-column align-items-end gap-2">
                            <span class="badge-status @(e.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                                @(e.IsActive ? "Activa" : "Inactiva")
                            </span>

                            <div class="d-flex gap-2">
                                <button class="btn-icon-action btn-edit"
                                        @onclick="@(() => EditarEspecialidad(e))">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn-icon-action btn-toggle"
                                        @onclick="@(() => ToggleEstado(e))"
                                        title="@(e.IsActive ? "Desactivar" : "Activar")">
                                    <i class="bi @(e.IsActive ? "bi-slash-circle" : "bi-check-circle")"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="spacer-bottom-large" style="height:80px;"></div>
    </div>
}

<!-- BOTTOM NAV -->
<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="VolverHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrPacientes">
        <i class="bi bi-people-fill"></i>
        <span>Pacientes</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _guardando = false;
    private bool _error = false;

    private List<EspecialidadDTO> _especialidades = new();
    private EspecialidadDTO _editModel = new();
    private bool _esEdicion = false;
    private string _mensaje = string.Empty;

    // Control de visibilidad del formulario
    private bool _mostrarFormulario = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            await CargarEspecialidades();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarEspecialidades()
    {
        var lista = await EspecialidadService.ListarAsync();
        _especialidades = lista ?? new List<EspecialidadDTO>();
        StateHasChanged();
    }

    private void NuevaEspecialidad()
    {
        _esEdicion = false;
        _editModel = new EspecialidadDTO
        {
            IdEspecialidad = 0,
            IsActive = true
        };
        _mensaje = string.Empty;
        _error = false;
        _mostrarFormulario = true; // Mostramos el form
    }

    private void EditarEspecialidad(EspecialidadDTO esp)
    {
        _esEdicion = true;
        _editModel = new EspecialidadDTO
        {
            IdEspecialidad = esp.IdEspecialidad,
            Nombre = esp.Nombre,
            Descripcion = esp.Descripcion,
            IsActive = esp.IsActive
        };
        _mensaje = string.Empty;
        _error = false;
        _mostrarFormulario = true; // Mostramos el form
    }

    private void CancelarEdicion()
    {
        _mostrarFormulario = false;
        _mensaje = string.Empty;
        _error = false;
    }

    private async Task GuardarEspecialidad()
    {
        if (string.IsNullOrWhiteSpace(_editModel.Nombre))
        {
            _error = true;
            _mensaje = "El nombre es obligatorio.";
            return;
        }

        _guardando = true;
        _mensaje = string.Empty;
        _error = false;

        try
        {
            EspecialidadDTO? resultado;

            if (_esEdicion && _editModel.IdEspecialidad > 0)
            {
                resultado = await EspecialidadService.EditarAsync(_editModel.IdEspecialidad, _editModel);
            }
            else
            {
                resultado = await EspecialidadService.CrearAsync(_editModel);
            }

            if (resultado == null)
            {
                _error = true;
                _mensaje = "No se pudo guardar la especialidad.";
            }
            else
            {
                _error = false;
                _mensaje = "Especialidad guardada correctamente.";
                await CargarEspecialidades();
                
                // Cerramos el formulario tras éxito
                _mostrarFormulario = false;
            }
        }
        catch (Exception ex)
        {
            _error = true;
            _mensaje = $"Error inesperado: {ex.Message}";
        }
        finally
        {
            _guardando = false;
        }
    }

    private async Task ToggleEstado(EspecialidadDTO esp)
    {
        var nuevoEstado = !esp.IsActive;

        var ok = await EspecialidadService.CambiarEstadoAsync(esp.IdEspecialidad, nuevoEstado);

        if (ok)
        {
            esp.IsActive = nuevoEstado;
            StateHasChanged();
        }
        else
        {
            // Podrías mostrar un toast aquí
            Console.WriteLine("No se pudo actualizar el estado.");
        }
    }

    private string GetInicial(string? nombre) => 
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    // Navegación
    private void VolverHome() => IrHome();
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/secretaria/pacientes", true);
}