@page "/secretaria/medicos/{Id:int}/horarios"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IMedicoService MedicoService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:70vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando horarios...</p>
    </div>
}
else if (_usuario is null || _usuario.Rol != "Secretaria")
{
    <RedirectToLogin />
}
else if (_medico is null)
{
    <div class="home-page">
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverMedicos">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Médico</p>
                    <h4 class="home-name">No encontrado</h4>
                </div>
            </div>
        </div>

        <div class="home-card p-5 text-center border-dashed">
            <i class="bi bi-emoji-frown text-muted fs-1 mb-3 d-block"></i>
            <p class="text-muted small mb-0">No se encontró información para este médico.</p>
        </div>
    </div>
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverMedicos">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name text-truncate" style="max-width: 200px;">
                        @_medico.NombreCompleto
                    </h4>
                    <span class="badge badge-secretaria mt-1">Horarios</span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <div class="home-card p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    @if (!string.IsNullOrWhiteSpace(_medico.EspecialidadNombre))
                    {
                        <div class="small text-muted d-flex align-items-center mb-1">
                            <i class="bi bi-heart-pulse me-2 text-danger"></i>
                            @_medico.EspecialidadNombre
                        </div>
                    }
                    @if (!string.IsNullOrWhiteSpace(_medico.Email))
                    {
                        <div class="small text-muted d-flex align-items-center">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            @_medico.Email
                        </div>
                    }
                </div>
                <span class="badge-status @( _medico.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                    @(_medico.IsActive ? "Activo" : "Inactivo")
                </span>
            </div>
        </div>

        <div class="home-card p-3 mb-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="section-title mb-0">Horarios configurados</h6>
                <button class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm"
                        @onclick="NuevoHorario">
                    <i class="bi bi-plus-lg me-1"></i> Nuevo
                </button>
            </div>

            @if (_horarios is null || !_horarios.Any())
            {
                <div class="text-center py-4 border-dashed rounded-3">
                    <i class="bi bi-clock-history text-muted fs-2 mb-2 d-block"></i>
                    <p class="small text-muted mb-0">
                        El médico no tiene horarios configurados.
                    </p>
                </div>
            }
            else
            {
                <div class="d-flex flex-column gap-2">
                    @foreach (var h in _horarios)
                    {
                        <div class="home-card p-3 d-flex justify-content-between align-items-center fade-in shadow-sm"
                             style="border: 1px solid #f0f2f5;">

                            <div class="d-flex flex-column">
                                <span class="fw-bold text-dark fs-6">
                                    @GetNombreDia(h.DiaSemana)
                                </span>
                                <div class="d-flex align-items-center gap-1">
                                    <span class="small text-muted fw-bold">
                                        @h.HoraInicio - @h.HoraFin
                                    </span>
                                    @if (h.SlotMinOverride.HasValue)
                                    {
                                        <span class="badge bg-light text-muted border ms-2" style="font-size: 0.6rem;">
                                            <i class="bi bi-hourglass-split me-1"></i>@h.SlotMinOverride.Value min
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="d-flex flex-column align-items-end gap-2">
                                <span class="badge-status @(h.Activo ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")" style="padding: 2px 8px; font-size: 0.6rem;">
                                    @(h.Activo ? "Activo" : "Inactivo")
                                </span>

                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-secondary border-0"
                                            @onclick="@(() => EditarHorario(h))">
                                        <i class="bi bi-pencil-square fs-6"></i>
                                    </button>
                                    <button class="btn btn-outline-danger border-0"
                                            @onclick="@(() => EliminarHorario(h.IdHorario))">
                                        <i class="bi bi-trash fs-6"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="home-card p-4 mb-5 shadow-sm">
            <h6 class="section-title mb-3">
                @(_esEdicion ? "Editar horario" : "Nuevo horario")
            </h6>

            <EditForm Model="_editModel" OnValidSubmit="GuardarHorario">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="label-mini">Día de la semana</label>
                    <InputSelect class="form-select input-modern"
                                 @bind-Value="_editModel.DiaSemana">
                        <option value="1">Lunes</option>
                        <option value="2">Martes</option>
                        <option value="3">Miércoles</option>
                        <option value="4">Jueves</option>
                        <option value="5">Viernes</option>
                        <option value="6">Sábado</option>
                        <option value="0">Domingo</option>
                    </InputSelect>
                </div>

                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="label-mini">Hora inicio</label>
                        <input type="time"
                               class="form-control input-modern text-center"
                               value="@_editModel.HoraInicio"
                               @onchange="@(e => _editModel.HoraInicio = e.Value?.ToString() ?? "")" />
                    </div>
                    <div class="col-6">
                        <label class="label-mini">Hora fin</label>
                        <input type="time"
                               class="form-control input-modern text-center"
                               value="@_editModel.HoraFin"
                               @onchange="@(e => _editModel.HoraFin = e.Value?.ToString() ?? "")" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="label-mini">Duración por turno (minutos)</label>
                    <InputNumber class="form-control input-modern"
                                 @bind-Value="_editModel.SlotMinOverride"
                                 placeholder="Opcional" />
                    <p class="small text-muted mt-1 fst-italic" style="font-size: 0.75rem;">
                        Si lo dejás vacío, se usará la duración por defecto del médico.
                    </p>
                </div>

                <div class="form-check form-switch mb-3 ms-1">
                    <InputCheckbox class="form-check-input"
                                   role="switch"
                                   id="horarioActivo"
                                   @bind-Value="_editModel.Activo" />
                    <label class="form-check-label small fw-bold text-muted ms-2" for="horarioActivo">
                        Horario activo
                    </label>
                </div>

                @if (!string.IsNullOrWhiteSpace(_mensaje))
                {
                    <div class="alert @( _error ? "alert-danger bg-danger-subtle text-danger" : "alert-success bg-success-subtle text-success") py-2 px-3 small mb-3 rounded-3 border-0 text-center">
                        <i class="bi @( _error ? "bi-exclamation-triangle" : "bi-check-circle") me-1"></i> @_mensaje
                    </div>
                }

                <button type="submit"
                        class="btn btn-primary w-100 py-2 shadow-sm"
                        disabled="@_guardando">
                    @if (_guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <i class="bi bi-save me-1"></i>
                        @(_esEdicion ? "Guardar cambios" : "Crear horario")
                    }
                </button>
            </EditForm>
        </div>

        <div class="spacer-bottom-large" style="height:80px;"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item active" @onclick="IrMedicos">
        <i class="bi bi-person-badge"></i>
        <span>Médicos</span>
    </button>
</div>

@code {
    [Parameter] public int Id { get; set; } 

    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _guardando = false;
    private bool _error = false;

    private MedicoDetalleDTO? _medico;
    private List<MedicoHorarioDTO> _horarios = new();
    private MedicoHorarioDTO _editModel = new();
    private bool _esEdicion = false;
    private string _mensaje = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            if (Id <= 0)
            {
                Nav.NavigateTo("/secretaria/medicos", true);
                return;
            }

            _medico = await MedicoService.ObtenerAsync(Id);
            if (_medico is null)
            {
                Nav.NavigateTo("/secretaria/medicos", true);
                return;
            }

            await CargarHorarios();
            NuevoHorario();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarHorarios()
    {
        var lista = await MedicoService.ListarHorariosAsync(Id);
        _horarios = lista ?? new List<MedicoHorarioDTO>();
        StateHasChanged();
    }

    private void NuevoHorario()
    {
        _esEdicion = false;
        _editModel = new MedicoHorarioDTO
        {
            IdHorario = 0,
            MedicoId = Id,
            DiaSemana = 1,       
            HoraInicio = "08:00",
            HoraFin = "12:00",
            SlotMinOverride = null,
            Activo = true
        };
        _mensaje = string.Empty;
        _error = false;
    }

    private void EditarHorario(MedicoHorarioDTO h)
    {
        _esEdicion = true;
        _editModel = new MedicoHorarioDTO
        {
            IdHorario = h.IdHorario,
            MedicoId = h.MedicoId,
            DiaSemana = h.DiaSemana,
            HoraInicio = h.HoraInicio,
            HoraFin = h.HoraFin,
            SlotMinOverride = h.SlotMinOverride,
            Activo = h.Activo
        };
        _mensaje = string.Empty;
        _error = false;
    }

    private async Task GuardarHorario()
    {
        _guardando = true;
        _mensaje = string.Empty;
        _error = false;

        try
        {
            MedicoHorarioDTO? res;

            if (_esEdicion && _editModel.IdHorario > 0)
                res = await MedicoService.EditarHorarioAsync(Id, _editModel.IdHorario, _editModel);
            else
                res = await MedicoService.CrearHorarioAsync(Id, _editModel);

            if (res == null)
            {
                _error = true;
                _mensaje = "No se pudo guardar el horario.";
            }
            else
            {
                _error = false;
                _mensaje = "Horario guardado correctamente.";
                await CargarHorarios();
                if (!_esEdicion) NuevoHorario();

                _ = Task.Delay(3000).ContinueWith(_ => { _mensaje = ""; InvokeAsync(StateHasChanged); });
            }
        }
        catch
        {
            _error = true;
            _mensaje = "Ocurrió un error al guardar el horario.";
        }
        finally
        {
            _guardando = false;
        }
    }

    private async Task EliminarHorario(int idHorario)
    {
        try
        {
            var ok = await MedicoService.EliminarHorarioAsync(Id, idHorario);
            if (ok)
            {
                _horarios = _horarios.Where(h => h.IdHorario != idHorario).ToList();
                StateHasChanged();
            }
            else
            {
                _error = true;
                _mensaje = "No se pudo eliminar el horario.";
            }
        }
        catch
        {
            _error = true;
            _mensaje = "Ocurrió un error al eliminar el horario.";
        }
    }

    private string GetNombreDia(byte dia) => dia switch
    {
        1 => "Lunes",
        2 => "Martes",
        3 => "Miércoles",
        4 => "Jueves",
        5 => "Viernes",
        6 => "Sábado",
        0 => "Domingo",
        _ => "—"
    };

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverMedicos() => Nav.NavigateTo("/secretaria/medicos", true);
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrMedicos() => Nav.NavigateTo("/secretaria/medicos", true);
}