@page "/secretaria/obras-sociales"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IObraSocialService ObraSocialService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando obras sociales...</p>
    </div>
}
else if (_usuario is null)
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <!-- HEADER -->
        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverHome">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name">Obras Sociales</h4>
                    <span class="badge badge-secretaria mt-1">
                        Gestión de cobertura
                    </span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <!-- MENSAJE FEEDBACK -->
        @if (!string.IsNullOrWhiteSpace(_mensaje))
        {
            <div class="alert @( _esError ? "alert-danger" : "alert-success") py-2 px-3 small mb-3 shadow-sm fade-in">
                <i class="bi @(_esError ? "bi-exclamation-circle" : "bi-check-circle") me-1"></i> @_mensaje
            </div>
        }

        <!-- FORMULARIO ALTA / EDICIÓN -->
        <div class="home-card p-4 mb-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="section-title mb-0">
                    @(_editando ? "Editar Obra Social" : "Nueva Obra Social")
                </h6>

                @if (_editando)
                {
                    <button class="btn btn-sm btn-outline-secondary rounded-pill py-1 px-3"
                            @onclick="CancelarEdicion">
                        <i class="bi bi-x me-1"></i> Cancelar
                    </button>
                }
            </div>

            <EditForm Model="_formModel" OnValidSubmit="GuardarObraSocial">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="label-mini">Nombre <span class="text-danger">*</span></label>
                    <input class="form-control input-modern"
                           @bind="_formModel.Nombre"
                           placeholder="Ej: OSDE"
                           maxlength="100" />
                </div>

                <div class="mb-3">
                    <label class="label-mini">Descripción</label>
                    <textarea class="form-control input-modern"
                              rows="2"
                              placeholder="Detalles adicionales (opcional)"
                              @bind="_formModel.Descripcion"></textarea>
                </div>

                <div class="form-check form-switch mb-3 ms-1">
                    <input class="form-check-input"
                           type="checkbox"
                           role="switch"
                           id="osActiva"
                           @bind="_formModel.IsActive"
                           style="cursor:pointer;" />
                    <label class="form-check-label small text-muted fw-bold ms-2" for="osActiva">
                        Activa en el sistema
                    </label>
                </div>

                <button type="submit"
                        class="btn btn-primary w-100 py-2 shadow-sm"
                        disabled="@_guardando">
                    @if (_guardando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Guardando...</span>
                    }
                    else
                    {
                        <span>
                            <i class="bi @(_editando ? "bi-check2" : "bi-plus-lg") me-1"></i>
                            @(_editando ? "Guardar Cambios" : "Crear Obra Social")
                        </span>
                    }
                </button>
            </EditForm>
        </div>

        <!-- LISTADO HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-2 mt-4 px-1">
            <span class="text-muted small">
                Total: <strong>@_obras.Count</strong> registros
            </span>

            <button class="btn btn-sm btn-outline-secondary rounded-pill py-1 px-3 bg-white"
                    @onclick="ToggleFiltroActivas">
                <i class="bi bi-funnel me-1"></i>
                @(_soloActivas ? "Ver todas" : "Solo activas")
            </button>
        </div>

        <!-- LISTADO -->
        @if (_cargandoLista)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary spinner-border-sm mb-2"></div>
                <p class="small text-muted mb-0">Actualizando listado...</p>
            </div>
        }
        else if (_obrasFiltradas is null || _obrasFiltradas.Count == 0)
        {
            <div class="home-card p-5 text-center border-dashed mt-2">
                <i class="bi bi-hospital text-muted fs-1 mb-3 d-block"></i>
                <p class="text-muted small mb-0 fw-bold">Sin resultados</p>
                <span class="text-muted small">No se encontraron obras sociales con el filtro aplicado.</span>
            </div>
        }
        else
        {
            <div class="d-flex flex-column gap-3 mb-5 mt-2">
                @foreach (var os in _obrasFiltradas)
                {
                    <div class="home-card p-3 fade-in">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <div>
                                <div class="fw-bold text-dark text-truncate" style="max-width: 180px; font-size: 1rem;">
                                    @os.Nombre
                                </div>
                                @if (!string.IsNullOrWhiteSpace(os.Descripcion))
                                {
                                    <div class="small text-muted text-truncate" style="max-width: 200px;">
                                        @os.Descripcion
                                    </div>
                                }
                            </div>

                            <span class="badge-status @(os.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary")">
                                @(os.IsActive ? "Activa" : "Inactiva")
                            </span>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-3 pt-2 border-top border-light gap-2">
                            <button class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                    @onclick="() => EditarObraSocial(os)">
                                <i class="bi bi-pencil-square me-1"></i> Editar
                            </button>

                            <button class="btn btn-sm @(os.IsActive ? "btn-outline-danger" : "btn-outline-success") rounded-pill px-3"
                                    @onclick="() => CambiarEstado(os)">
                                <i class="bi @(os.IsActive ? "bi-x-circle" : "bi-check2-circle") me-1"></i>
                                @(os.IsActive ? "Desactivar" : "Activar")
                            </button>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="spacer-bottom-large" style="height:80px;"></div>
    </div>
}

<!-- BOTTOM NAV -->
<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="IrHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrPacientes">
        <i class="bi bi-people"></i>
        <span>Pacientes</span>
    </button>
    <button class="bottom-nav-item active">
        <i class="bi bi-hospital"></i>
        <span>Obras Soc.</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _cargandoLista = false;
    private bool _guardando = false;

    private List<ObraSocialDTO> _obras = new();
    private List<ObraSocialDTO> _obrasFiltradas = new();
    private bool _soloActivas = true;

    private ObraSocialDTO _formModel = new();
    private bool _editando = false;
    private int? _obraEditandoId = null;

    private string _mensaje = string.Empty;
    private bool _esError = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            await CargarObras();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarObras()
    {
        _cargandoLista = true;
        try
        {
            _obras = await ObraSocialService.ListarAsync() ?? new List<ObraSocialDTO>();
            AplicarFiltro();
        }
        finally
        {
            _cargandoLista = false;
            StateHasChanged();
        }
    }

    private void AplicarFiltro()
    {
        if (_soloActivas)
            _obrasFiltradas = _obras.Where(o => o.IsActive).OrderBy(o => o.Nombre).ToList();
        else
            _obrasFiltradas = _obras.OrderBy(o => o.Nombre).ToList();
    }

    private void ToggleFiltroActivas()
    {
        _soloActivas = !_soloActivas;
        AplicarFiltro();
    }

    private async Task GuardarObraSocial()
    {
        _mensaje = string.Empty;
        _esError = false;
        _guardando = true;

        try
        {
            if (string.IsNullOrWhiteSpace(_formModel.Nombre))
            {
                _mensaje = "El nombre es obligatorio.";
                _esError = true;
                return;
            }

            ObraSocialDTO? res;

            if (_editando && _obraEditandoId.HasValue)
            {
                res = await ObraSocialService.EditarAsync(_obraEditandoId.Value, _formModel);
                _mensaje = res != null ? "Actualizada correctamente." : "Error al actualizar.";
            }
            else
            {
                res = await ObraSocialService.CrearAsync(_formModel);
                _mensaje = res != null ? "Creada correctamente." : "Error al crear.";
            }

            _esError = res == null;

            if (res != null)
            {
                _formModel = new ObraSocialDTO { IsActive = true };
                _editando = false;
                _obraEditandoId = null;
                await CargarObras();
            }
        }
        catch
        {
            _mensaje = "Ocurrió un error inesperado.";
            _esError = true;
        }
        finally
        {
            _guardando = false;
        }
    }

    private void EditarObraSocial(ObraSocialDTO os)
    {
        _editando = true;
        _obraEditandoId = os.IdObraSocial;

        _formModel = new ObraSocialDTO
        {
            IdObraSocial = os.IdObraSocial,
            Nombre = os.Nombre,
            Descripcion = os.Descripcion,
            IsActive = os.IsActive
        };
        
        // Scroll al top (opcional, simple UX)
        _mensaje = string.Empty;
    }

    private void CancelarEdicion()
    {
        _editando = false;
        _obraEditandoId = null;
        _formModel = new ObraSocialDTO { IsActive = true };
        _mensaje = string.Empty;
    }

    private async Task CambiarEstado(ObraSocialDTO os)
    {
        _mensaje = string.Empty;
        
        var nuevoEstado = !os.IsActive;
        var ok = await ObraSocialService.CambiarEstadoAsync(os.IdObraSocial, nuevoEstado);

        if (!ok)
        {
            _mensaje = "No se pudo cambiar el estado.";
            _esError = true;
            return;
        }

        // Actualización optimista
        os.IsActive = nuevoEstado;
        AplicarFiltro(); 
        
        // Feedback sutil (opcional)
        // _mensaje = "Estado actualizado.";
        // _esError = false;
    }

    private string GetInicial(string? nombre) => 
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/secretaria/pacientes", true);
}