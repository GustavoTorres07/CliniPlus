@page "/secretaria/medicos"
@layout CliniPlus.Movil.Components.Layout.EmptyLayout

@using CliniPlus.Shared.DTOs
@using Microsoft.AspNetCore.Components.Web
@inject CliniPlus.Movil.Services.Contrato.IAuthService Auth
@inject CliniPlus.Movil.Services.Contrato.IMedicoService MedicoService
@inject NavigationManager Nav

@if (_cargando)
{
    <div class="home-loading d-flex flex-column align-items-center justify-content-center" style="height:60vh;">
        <div class="spinner-border text-primary mb-2"></div>
        <p class="text-muted small mb-0">Cargando médicos...</p>
    </div>
}
else if (_usuario is null || _usuario.Rol != "Secretaria")
{
    <RedirectToLogin />
}
else
{
    <div class="home-page">

        <div class="home-header mb-4">
            <div class="d-flex align-items-center gap-3">
                <button class="btn-back" @onclick="VolverHome">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <div class="home-greeting">
                    <p class="home-hello">Secretaría</p>
                    <h4 class="home-name">Médicos</h4>
                    <span class="badge badge-secretaria mt-1">
                        Directorio
                    </span>
                </div>
            </div>

            <div class="home-avatar">
                <span>@GetInicial(_usuario.NombreCompleto)</span>
            </div>
        </div>

        <div class="px-1 mb-3">
            <div class="input-group input-elevated">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input class="form-control"
                       placeholder="Buscar por nombre o especialidad..."
                       value="@_busqueda"
                       @oninput="OnBusquedaInput" />
            </div>
            <p class="text-muted small mt-2 mb-0 ms-2">
                Total: <strong>@_medicosFiltrados.Count</strong> médicos encontrados
            </p>
        </div>

        @if (_cargandoLista)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary spinner-border-sm mb-2"></div>
                <p class="small text-muted mb-0">Actualizando listado...</p>
            </div>
        }
        else if (_medicosFiltrados is null || _medicosFiltrados.Count == 0)
        {
            <div class="home-card p-5 text-center border-dashed mt-3">
                <i class="bi bi-person-vcard text-muted fs-1 mb-3 d-block"></i>
                <p class="text-muted small mb-0 fw-bold">Sin resultados</p>
                <span class="text-muted small">No se encontraron médicos con ese criterio.</span>
            </div>
        }
        else
        {
            <div class="d-flex flex-column gap-3 mb-5">
                @foreach (var m in _medicosFiltrados)
                {
                    <div class="doctor-card fade-in">

                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="d-flex align-items-center gap-3"
                                 @onclick="@(() => IrDetalleMedico(m.IdMedico))"
                                 style="cursor:pointer;">
                                <div class="doctor-avatar-small">
                                    @GetInicial(m.NombreCompleto)
                                </div>
                                <div>
                                    <div class="fw-bold text-dark text-truncate" style="max-width: 180px;">
                                        @m.NombreCompleto
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(m.Especialidad))
                                    {
                                        <div class="small text-muted">
                                            <i class="bi bi-heart-pulse me-1 text-danger"></i>
                                            @m.Especialidad
                                        </div>
                                    }
                                </div>
                            </div>

                            <span class="badge-status @(m.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-muted")">
                                @(m.IsActive ? "Activo" : "Inactivo")
                            </span>
                        </div>

                        <div class="small text-muted mt-2 pt-2 border-top border-light d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-envelope me-1 text-primary"></i>
                                @if (!string.IsNullOrWhiteSpace(m.Email))
                                {
                                    <span class="text-truncate" style="max-width: 150px; display:inline-block; vertical-align: bottom;">
                                        @m.Email
                                    </span>
                                }
                                else
                                {
                                    <span class="fst-italic">Sin email</span>
                                }
                            </span>

                            <div class="btn-group btn-group-sm">
                                <button type="button"
                                        class="btn btn-outline-primary"
                                        @onclick="@(() => IrHorariosMedico(m.IdMedico))">
                                    <i class="bi bi-clock-history"></i>
                                </button>

                                <button type="button"
                                        class="btn @(m.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                        @onclick="@(() => ToggleEstadoMedico(m))">
                                    <i class="bi @(m.IsActive ? "bi-slash-circle" : "bi-check-circle")"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="spacer-bottom-large" style="height: 80px;"></div>
    </div>
}

<div class="bottom-nav shadow-soft">
    <button class="bottom-nav-item" @onclick="VolverHome">
        <i class="bi bi-house-door-fill"></i>
        <span>Inicio</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrTurnosHoy">
        <i class="bi bi-calendar-check"></i>
        <span>Turnos</span>
    </button>
    <button class="bottom-nav-item" @onclick="IrPacientes">
        <i class="bi bi-people"></i>
        <span>Pacientes</span>
    </button>
</div>

@code {
    private AuthMeResponse? _usuario;
    private bool _cargando = true;
    private bool _cargandoLista = false;

    private string _busqueda = string.Empty;

    private List<MedicoListadoDTO> _medicos = new();
    private List<MedicoListadoDTO> _medicosFiltrados = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _cargando = true;
            _usuario = await Auth.MeAsync();

            if (_usuario is null || _usuario.Rol != "Secretaria")
            {
                Nav.NavigateTo("/", true);
                return;
            }

            await CargarMedicos();
        }
        catch
        {
            Nav.NavigateTo("/", true);
        }
        finally
        {
            _cargando = false;
        }
    }

    private async Task CargarMedicos()
    {
        _cargandoLista = true;
        try
        {
            _medicos = await MedicoService.ListarAsync(null)
                        ?? new List<MedicoListadoDTO>();

            AplicarFiltro();
        }
        finally
        {
            _cargandoLista = false;
            StateHasChanged();
        }
    }

    private void OnBusquedaInput(ChangeEventArgs e)
    {
        _busqueda = e.Value?.ToString() ?? string.Empty;
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(_busqueda))
        {
            _medicosFiltrados = _medicos
                .OrderBy(m => m.NombreCompleto)
                .ToList();
        }
        else
        {
            var texto = _busqueda.Trim().ToLower();

            _medicosFiltrados = _medicos
                .Where(m =>
                    (!string.IsNullOrWhiteSpace(m.NombreCompleto) &&
                     m.NombreCompleto.ToLower().Contains(texto))
                    ||
                    (!string.IsNullOrWhiteSpace(m.Especialidad) &&
                     m.Especialidad.ToLower().Contains(texto)))
                .OrderBy(m => m.NombreCompleto)
                .ToList();
        }
    }

    private void IrDetalleMedico(int medicoId)
        => Nav.NavigateTo($"/secretaria/medicos/{medicoId}");

    private void IrHorariosMedico(int medicoId)
        => Nav.NavigateTo($"/secretaria/medicos/{medicoId}/horarios");

    private async Task ToggleEstadoMedico(MedicoListadoDTO medico)
    {
        var nuevoEstado = !medico.IsActive;

        var ok = await MedicoService.CambiarEstadoAsync(medico.IdMedico, nuevoEstado);

        if (ok)
        {
            medico.IsActive = nuevoEstado;
            StateHasChanged();
        }
    }

    private async Task CerrarSesion()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/", true);
    }

    private string GetInicial(string? nombre) =>
        string.IsNullOrWhiteSpace(nombre) ? "?" : nombre[0].ToString().ToUpper();

    private void VolverHome() => Nav.NavigateTo("/secretaria/home", true);
    private void IrTurnosHoy() => Nav.NavigateTo("/secretaria/turnos/hoy", true);
    private void IrPacientes() => Nav.NavigateTo("/secretaria/pacientes", true);
}
